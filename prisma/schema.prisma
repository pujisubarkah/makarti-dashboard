generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["makarti"]
}

model Publikasi {
  id        Int      @id @default(autoincrement())
  judul     String
  tanggal   DateTime
  jenis     String   // e.g., Media Online, Instagram, dll
  unit      String
  link      String
  likes     Int?     // opsional
  views     Int?     // opsional
  createdAt DateTime @default(now())

  @@schema("makarti")
}

model Sosialisasi {
  id        Int      @id @default(autoincrement())
  nama      String
  tanggal   DateTime
  jenis     String   // Webinar, Tatap Muka, Live IG, FGD
  platform  String
  unit      String
  peserta   Int
  createdAt DateTime @default(now())

  @@schema("makarti")
}

model Networking {
  id          Int      @id @default(autoincrement())
  instansi    String
  jenis       String   // Kunjungan, Kerjasama, Koordinasi
  tanggal     DateTime
  status      String   // Selesai, MoU Ditandatangani, Menunggu Tindak Lanjut
  unit        String
  createdAt   DateTime @default(now())

  @@schema("makarti")
}

model Koordinasi {
  id           Int      @id @default(autoincrement())
  tanggal      DateTime
  instansi     String
  jenisInstansi String  // Pusat / Daerah / Akademisi
  topik        String
  catatan      String?
  unit         String   // Unit kerja penginput
  createdAt    DateTime @default(now())

  @@schema("makarti")
}

model Pelatihan {
  id        Int      @id @default(autoincrement())
  nama      String
  unit      String
  judul     String
  jam       Int
  tanggal   DateTime

  @@schema("makarti")
}

model Penyelenggaraan {
  id              Int     @id @default(autoincrement())
  namaKegiatan    String
  tanggal         DateTime
  jenis           String
  penyelenggara   String
  jumlahPeserta   Int

  @@schema("makarti")
}

model Inovasi {
  id              Int     @id @default(autoincrement())
  judul           String
  pengusul        String
  tahap           String
  tanggal         DateTime
  indikator       String

  @@schema("makarti")
}

model SkpTransformasional {
  id             Int      @id @default(autoincrement())
  pegawai        String
  unit           String
  inovasi        String
  target         String
  status         String   // Contoh: Sudah Implementasi, On Progress, Dalam Rencana
  dampak         String?
  createdAt      DateTime @default(now())

  @@schema("makarti")
}

model ProdukInovasi {
  id            Int      @id @default(autoincrement())
  nama          String
  unit          String   // Contoh: Pusat A, Pusat B
  jenis         String   // Contoh: Aplikasi Digital, SOP, Dashboard, dll
  status        String   // Contoh: Aktif Digunakan, Uji Coba, Arsip
  tanggalRilis  DateTime
  keterangan    String?

  @@schema("makarti")
}

